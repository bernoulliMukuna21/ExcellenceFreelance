header
    div.top-container
        h1.web-title: a(href='/') NxtDue
        div.top-navbar(style='color:#213e53;')
            - console.log('Client Page Login Status: ', userType)
            if (!isLogged)
                a(href='/users/join'): button(class='nav-btn', id='joinNow') Join For Free
                a(href='/users/login'): button(class='nav-btn') Login
            else
                if(user.user_stature === 'client')
                    a(href='/account/client/'+userEmail_encoded): button(class='nav-btn') My Account, #{user.name} #{user.surname}
                else if(user.user_stature === 'freelancer')
                    a(href='/account/freelancer/' + userEmail_encoded): button(class='nav-btn') My Account, #{user.name} #{user.surname}
                a(href='/'): button(class='nav-btn') Home
                a(href='/users/logout'): button(class='nav-btn') Logout

    div.top-mobilenavcontainer
        .mobileweb-title
            a(href='/') NxtDue
        div.mobiletop-navbar
            - console.log('Client Page Login Status: ', userType)
            if (!isLogged)
                .mobileheaderLinks
                    a(href='/users/join') Join For Free
                    a(href='/users/login') Login
            else
                if(user.user_stature === 'client')
                    .mobileheaderLinks
                        a(href='/account/client/' + userEmail_encoded) My Account, #{user.name} #{user.surname}
                        a(href='/') Home
                        a(href='/users/logout') Logout
                else if(user.user_stature === 'freelancer')
                    .mobileheaderLinks
                        a(href='/account/freelancer/' + userEmail_encoded) My Account, #{user.name} #{user.surname}
                        a(href='/') Home
                        a(href='/users/logout') Logout

            a.headerburger-icon(href='javascript:void(0)')
                i.fa.fa-bars





